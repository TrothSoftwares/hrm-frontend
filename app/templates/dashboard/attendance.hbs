<div class="pusher-in">
  <div class="ui top fixed menu tf-head">
  <div class="ui header oxy h-item" {{action "getcurrentpath"}}>
    Attendance Management
  </div>
</div>
</div>

<div class="content-section pusher-in">
  <div class="ui basic segment  form">

    <table class="ui very basic structured center aligned table widthfix">
      <thead>
        <tr>
        <th>ID</th>
        <th>Employee Name</th>
        <th>Total</th>
        <th>Leave</th>
        <th>Present</th>
        <th></th>
        </tr>
      </thead>

      <tbody>
        {{#each employees as |employee index|}}
        <tr>
        {{#if (eq employee.editemployee false)}}
        <td>{{incrementone index}}</td>
        <td>{{employee.firstname}} {{employee.lastname}}</td>
        <td>{{employee.attendances.lastObject.totaldays}}</td>
        <td>{{employee.attendances.lastObject.leavedays}}</td>
        <td>{{employee.attendances.lastObject.presentdays}}</td>
        <td><button class="ui fluid primary tiny button br0 oxy" {{action "editSalary" employee}}>Edit</button></td>
        {{else}}
        <td>{{incrementone index}}</td>
        <td>{{employee.firstname}} {{employee.lastname}}</td>
        <td>{{input type="text" value=employee.attendances.lastObject.totaldays }}</td>
        <td>{{input type="text" value=employee.attendances.lastObject.leavedays }}</td>
        <td>{{employee.attendances.lastObject.presentdayscalc}}</td>
        <td><button class="ui fluid primary tiny button br0 oxy" {{action "saveSalary" employee}}>Save</button></td>
        {{/if}}
        </tr>
        {{/each}}
      </tbody>
    </table>



