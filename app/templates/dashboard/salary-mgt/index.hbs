<div class="content-section pusher-in">
  <div class="ui  grid">
    <div class="sixteen wide column">
      <div class="ui left icon input">
                 {{input type="text" placeholder="Search Employee..." value=searchTerm }}
        <i class="users icon"></i>
      </div>


      <table class="ui very basic  structured center aligned table bgw ">
        <thead>
          <tr>
            <th>Sl.No</th>
            <th>Name</th>
            <th>Gross Salary</th>
            <th>View</th>
          </tr>
        </thead>
        <tbody>




          {{#each matchingEmployeeNames as |employee index|}}
          <tr>
            <td>{{incrementone index}}</td>
            <td>{{employee.firstname}}  {{employee.lastname}}</td>
            <td>{{employee.gross}}</td>
            <td>{{#link-to 'dashboard.salary-mgt.employee.view' employee.id    }}
            Open
            {{/link-to}}</td>
          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
    <div class="column">
    </div>
  </div>
</div>

{{outlet}}
