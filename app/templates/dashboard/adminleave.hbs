<div class="ui top attached tabular menu">
  <a class="active item" data-tab="first"> Events</a>
  <a class="item" data-tab="second">Pending Leaves</a>
  <a class="item" data-tab="third">Approved Leaves</a>
  <a class="item" data-tab="fourth">Rejected</a>
</div>
<div class="ui bottom attached active tab segment" data-tab="first">






  {{as-calendar
    title="Events Calendar"
    occurrences=occurrences
    defaultTimeZoneQuery="New York|London|Dubai|Hong Kong"
    dayStartingTime="00:00"
    dayEndingTime="24:00"
    timeSlotDuration="00:30"
    onAddOccurrence=(action "calendarAddOccurrence")
    onUpdateOccurrence=(action "calendarUpdateOccurrence")
    onRemoveOccurrence=(action "calendarRemoveOccurrence")}}




</div>
<div class="ui bottom attached tab segment" data-tab="second">
  <table class="ui celled table">
  <thead>
    <tr><th>ID</th>
    <th>From date</th>
    <th>To Date</th>
    <th>Status</th>
  </tr></thead>
  <tbody>

    {{#each pendingLeaves as |pendingleave index|}}
    <tr>
      <td>{{incrementone index}}</td>
      <td>{{ moment-format pendingleave.fromdate inputFormat}}</td>
      <td>{{ moment-format pendingleave.todate inputFormat}}</td>
      <td style="text-transform:capitalize" >{{pendingleave.status}}</td>
    </tr>
    {{/each }}

  </tbody>

</table>
</div>


<div class="ui bottom attached tab segment" data-tab="third">

  <table class="ui celled table">
  <thead>
    <tr><th>ID</th>
    <th>From date</th>
    <th>To Date</th>
    <th>Status</th>
  </tr></thead>
  <tbody>

    {{#each approvedLeaves as |approvedleave index|}}
    <tr>
      <td>{{approvedleave.id}}</td>
      <td>{{ moment-format approvedleave.fromdate inputFormat}}</td>
      <td>{{ moment-format approvedleave.todate inputFormat}}</td>
      <td style="text-transform:capitalize" >{{approvedleave.status}}</td>
    </tr>
    {{/each }}

  </tbody>

</table>

</div>

<div class="ui bottom attached tab segment" data-tab="fourth">

  <table class="ui celled table">
  <thead>
    <tr><th>ID</th>
    <th>From date</th>
    <th>To Date</th>
    <th>Status</th>
  </tr></thead>
  <tbody>

    {{#each rejectedLeaves as |rejectedleave index|}}
    <tr>
      <td>{{incrementone index}}</td>
      <td>{{ moment-format rejectedleave.fromdate inputFormat}}</td>
      <td>{{ moment-format rejectedleave.todate inputFormat}}</td>
      <td style="text-transform:capitalize" >{{approvedleave.status}}</td>
    </tr>
    {{/each }}

  </tbody>

</table>

</div>



{{initialize-semanticuitabs}}





<div class="ui modal">
  <i class="close icon"></i>
  <div class="header">
    Profile Picture
  </div>
  <div class="image content">
    <div class="ui medium image">
      
    </div>
    <div class="description">
      <div class="ui header">We've auto-chosen a profile image for you.</div>
      <p>We've grabbed the following image from the <a href="https://www.gravatar.com" target="_blank">gravatar</a> image associated with your registered e-mail address.</p>
      <p>Is it okay to use this photo?</p>
    </div>
  </div>
  <div class="actions">
    <div class="ui black deny button">
      Nope
    </div>
    <div class="ui positive right labeled icon button">
      Yep, that's me
      <i class="checkmark icon"></i>
    </div>
  </div>
</div>
