<div class="content-section pusher-in">
<div class="ui grid tiny form">
  <div class="ui sixteen wide column">
    <div class="ui basic segment bgw">
  <div class="ui header">
    Edit Salary
    <div class="ui  green mini blue right floated button oxy  {{isSaveDisabled}}" tabindex="0" {{action "saveEmployeeSalary"}}>Save</div>
      {{#link-to 'dashboard.salary-mgt.employee.view'}}
      <div class="ui blue right floated   mini  button oxy">
        Cancel
      </div>
      {{/link-to}}

  </div>
  <div class="ui divider">

  </div>
  <div class=" ui grid smip">
    <div class="four wide column">
      <div class="ui inline field">
        <label class="l1">Employee ID</label>:
        <label class="l2"> {{employee.id}} </label>
      </div>
      <div class="ui inline field">
        <label class="l1">Employee Name</label>:
        <label class="l2"> {{employee.firstname}} {{employee.lastname}} </label>
      </div>
    </div>
    <div class="six wide right aligned column">
      <div class="inline field">
        <label class="l1">Basic</label>:

        <div class="ui   input">
          {{input type="text"   value=employee.basic}}
        </div>
      </div>
      <div class="inline field">
        <label class="l1">House Rent Allowance</label>:
        <div class="ui input">

          {{input type="number"  value=employee.houserentallowance}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Adhoc Allowance</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.adhoc}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Transport Allowance</label>:
        <div class="ui  input">
          {{input type="number"  value=employee.transport}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Miscellaneous Allowance</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.misc}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Stat Bonus</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.statbonus}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Other Earnings NT</label>:
        <div class="ui input">
          {{input type="number"   value=employee.otherearningsnt}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">On Call Shift Allowance</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.oncallshiftallowance}}
        </div>
      </div>


    </div>
    <div class="six wide right aligned column">
      <div class="inline field">
        <label class="l1">Provident Fund</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.provfund}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Professional Tax</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.proftax}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Income Tax</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.incometax}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">ESSP</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.essp}}
        </div>
      </div>

      <div class="inline field">
        <label class="l1">Gross Salary</label>:
        <div class="ui  input">
          {{input type="number"   value=employee.grossComputed}}
        </div>
      </div>
    </div>
  </div>
  </div>
</div>


</div>
</div>
{{outlet}}
