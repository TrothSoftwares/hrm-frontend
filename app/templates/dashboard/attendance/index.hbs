



<div class="content-section pusher-in">
  <div class="ui basic segment  form bgw ">
    Attendance Management
     -   {{moment-format date outputFormat }}
    <div class="ui right floated  oxy green mini button "  {{action "printPage"}}>Print Page</div>
    <div class="ui  right floated oxy mini blue button "  {{action "closeAttendance"}}>Close Attendance</div>
    <div class="mtop">

    </div>
    <table class="ui structured center aligned table widthfix ">

      <thead>
        <tr>
          <th>ID</th>
          <th>Employee Name</th>
          <th>Total</th>
          <th>Leave</th>
          <th>Present</th>
          <th>Edit</th>
          <th>View History </th>

        </tr>
      </thead>

      <tbody>
        {{#each employees as |employee index|}}
        <tr>
          {{#if (eq employee.editemployee  false)}}
          <td>{{incrementone index}}</td>
          <td>{{employee.firstname}} {{employee.lastname}}</td>
          <td>{{employee.attendances.lastObject.totaldays}}</td>
          <td>{{employee.attendances.lastObject.leavedays}}</td>
          <td>{{employee.attendances.lastObject.presentdays}}</td>
          <td><span class="tbtn" {{action "editSalary" employee}}>edit</span></td>
          <td><span class="tbtn">
            {{#link-to 'dashboard.attendance.employee.view' employee  class="item"}}
                view history
            {{/link-to}}
          </span></td>



          {{else}}
          <td>{{incrementone index}}</td>
          <td>{{employee.firstname}} {{employee.lastname}}</td>
          <td>{{input type="text" value=employee.attendances.lastObject.totaldays }}</td>
          <td>{{input type="text" value=employee.attendances.lastObject.leavedays }}</td>
          <td>{{employee.attendances.lastObject.presentdayscalc}}</td>
          <td><span class="tbtn" {{action "saveSalary" employee}}>Save</span></td>
          <td> </td>
          {{/if}}
        </tr>
        {{/each}}
      </tbody>
    </table>


